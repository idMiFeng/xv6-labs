{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "C/C++: gcc build active file",
        "type": "cppbuild",
        "command": "/usr/bin/gdb-multiarch",
        "args": [
            "-g",
            "${file}",
            "-o", 
            "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
            "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      },
      {
        "label": "make-gdb",
        "command":"make",
        "args": ["qemu-gdb"],
        "isBackground": true
      },
    ],
    
  }
  